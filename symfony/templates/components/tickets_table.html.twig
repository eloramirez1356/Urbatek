<table id="tickets_table" class="table table-striped table-hover table-responsive" role="grid" aria-label="Tabla de albaranes">
    <thead>
    <tr>
        <th scope="col" role="columnheader">ID</th>
        <th scope="col" role="columnheader">Obra</th>
        <th scope="col" role="columnheader">Empleado</th>
        <th scope="col" role="columnheader">Fecha</th>
        <th scope="col" role="columnheader">Máquina</th>
        <th scope="col" role="columnheader">Material</th>
        <th scope="col" role="columnheader">Número viajes</th>
        <th scope="col" role="columnheader">Toneladas</th>
        <th scope="col" role="columnheader">Portes</th>
        <th scope="col" role="columnheader">Horas</th>
        <th scope="col" role="columnheader">Horas martillo</th>
        <th scope="col" role="columnheader">Horas cazo</th>
        <th scope="col" role="columnheader">Origen/destino</th>
        <th scope="col" role="columnheader">Litros gasóleo</th>
        <th scope="col" role="columnheader">Comentarios</th>
        <th scope="col" role="columnheader">Firma cliente</th>
        <th scope="col" role="columnheader">Albarán</th>
    </tr>
    </thead>

    <tbody>
    {% for ticket in tickets %}
        <tr class="js-row" role="row">
            <td role="cell">{{ ticket.id }}</td>
            <td role="cell"><a href="{{ path('admin_site_tickets', {'site_id': ticket.site.id}) }}" aria-label="Ver albaranes de {{ ticket.site.name }}">{{ ticket.site.name }}</a></td>
            <td role="cell">{{ ticket.employee.name }}</td>
            <td role="cell">{{ ticket.date | date('Y-m-d') }}</td>
            <td role="cell">{{ ticket.machine.name }}</td>
            <td role="cell">{% if ticket.material is defined and ticket.material is not null %} {{ ticket.material.name }}{% endif %}</td>
            <td role="cell">{% if ticket.numTravels is defined %}{{ ticket.numTravels }}{% endif %}</td>
            <td role="cell">{% if ticket.tons is defined %}{{ ticket.tons }}{% endif %}</td>
            <td role="cell">{% if ticket.portages is defined %}{{ ticket.portages }}{% endif %}</td>
            <td role="cell">{% if ticket.hours is defined %}{{ ticket.hours }}{% endif %}</td>
            <td role="cell">{% if ticket.hammerHours is defined %}{{ ticket.hammerHours }}{% endif %}</td>
            <td role="cell">{% if ticket.spoonHours is defined %}{{ ticket.spoonHours }}{% endif %}</td>
            <td role="cell">{% if ticket.provider is defined %}{{ ticket.provider }}{% endif %}</td>
            <td role="cell">{% if ticket.liters is not null %}{{ ticket.liters }}{% endif %}</td>
            <td role="cell">{% if ticket.comments is not null %}{{ ticket.comments }}{% endif %}</td>
            <td role="cell">{{ ticket.providerSigned }}</td>
            <td role="cell">{% if ticket.document is not null %}<a target="_blank" href="{{ path('admin_view_document', {'document_id': ticket.document.id}) }}" aria-label="Ver albarán">Ver</a>{% else %}No{% endif %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>