{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_index' %}

{% block main %}
    <h1>Editar máquinas</h1>


    <table style="width:100%">
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Kilómetros</th>
        </tr>

        {% for machine in machines %}
            <tr>
                <td>{{ machine.name }}</td>
                <td></td>
                <td>{{ machine.kms }}</td>
            </tr>
        {% endfor %}
    </table>

    <div class="col-sm-5  col-md-offset-3">
        {{ form_start(machine_form) }}
        {{ form_end(machine_form) }}
    </div>

{% endblock %}